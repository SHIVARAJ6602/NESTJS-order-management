services:
  app:
    build:
      context: .
    ports:
      - "3000:3000"
    restart: unless-stopped
    init: true
    depends_on:
      - database
    environment:
      - NODE_ENV=production
      - PORT=3000
    # env_file: ./.env  # Uncomment if .env file exists
  database:
    image: postgres:latest
    environment:
      - POSTGRES_USER=example_user
      - POSTGRES_PASSWORD=example_password
      - POSTGRES_DB=example_db
    volumes:
      - db_data:/var/lib/postgresql/data
    networks:
      - app_network
volumes:
  db_data:
networks:
  app_network: